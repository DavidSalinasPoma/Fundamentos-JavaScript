{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["standard"],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"semi": ["error", "always"],
		"eol-last": "off",
		"indent": "off",
		"no-tabs": "off",
		"no-multiple-empty-lines": "off",
		"padded-blocks": "off",
		"no-trailing-spaces": "off",
		"no-constant-condition": "off",
		"prefer-const": "off",
		"comma-dangle": "off",
		"space-before-function-paren": "off",
		"comma-spacing": "off"
	}
}
